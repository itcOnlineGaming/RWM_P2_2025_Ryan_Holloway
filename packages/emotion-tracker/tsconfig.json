{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "DOM"],
    "moduleResolution": "bundler",
    "module": "esnext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
  "exclude": ["node_modules", "dist"]
}
